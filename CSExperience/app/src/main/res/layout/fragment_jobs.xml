<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <include
        android:id="@+id/include2"
        layout="@layout/app_bar_nav"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@+id/scrollViewJobs">

        <TextView
            android:id="@+id/loadScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/pixellari"
            android:paddingTop="200dp"
            android:gravity="center"
            android:text="Jobs"
            android:textColor="@color/colorAccent"
            android:textSize="48sp" />

    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollViewJobs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="300dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleCafeteria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixellari"
                android:gravity="bottom|center"
                android:text="Tim Wortons"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textModifierCafeteria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/pixellari"
                android:gravity="bottom|center"
                android:text="+15 Coins\n-15 Energy\n-20 Happiness\n-8 Food"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonCafeteria"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/pixellari"
                android:text="Server"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/titleBookstore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixellari"
                android:gravity="bottom|center"
                android:text="Outdigo"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textModifierBookstore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/pixellari"
                android:gravity="bottom|center"
                android:text="+17 Coins\n-20 Energy\n-15 Happiness\n-15 Food"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonBookStore"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/pixellari"
                android:text="Cashier"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/titleDelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixellari"
                android:gravity="bottom|center"
                android:text="Keep The Dishes"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textModifierDelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/pixellari"
                android:gravity="bottom|center"
                android:text="+20 Coins\n-20 Energy\n-8 Happiness\n-15 Food"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonDelivery"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/pixellari"
                android:text="Delivery"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>