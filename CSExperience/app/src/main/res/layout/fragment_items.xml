<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <include
        android:id="@+id/include3"
        layout="@layout/app_bar_nav"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@+id/scrollViewItems">

        <TextView
            android:id="@+id/itemsScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/pixellari"
            android:paddingTop="200dp"
            android:gravity="center"
            android:text="Items"
            android:textColor="@color/colorAccent"
            android:textSize="48sp" />

    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollViewItems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="300dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleCoffee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixellari"
                android:gravity="bottom|center"
                android:text="Coffee"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textModifierCoffee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/pixellari"
                android:gravity="bottom|center"
                android:text="+Energy\n-Food"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonCoffee"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:fontFamily="@font/pixellari"
                android:text="Buy!"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/titleBeer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/pixellari"
                android:gravity="bottom|center"
                android:text="Beer"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textModifierBeer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/pixellari"
                android:gravity="bottom|center"
                android:text="-Energy\n+Happiness\n-Food"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonBeer"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:fontFamily="@font/pixellari"
                android:text="Buy!"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/titleSnacks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/pixellari"
                android:gravity="bottom|center"
                android:text="Snack"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textModifierComputer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/pixellari"
                android:gravity="bottom|center"
                android:text="+ Food"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonSnacks"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/pixellari"
                android:text="Buy!"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/titleEnergyDrink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/pixellari"
                android:gravity="bottom|center"
                android:text="Energy Drink"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textModifierEnergyDrink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/pixellari"
                android:gravity="bottom|center"
                android:text="+ Energy"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonEnergyDrink"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/pixellari"
                android:text="Buy!"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/titleChegg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/pixellari"
                android:gravity="bottom|center"
                android:text="Chegg"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textModifierChegg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/pixellari"
                android:gravity="bottom|center"
                android:text="+2 Course Level"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonChegg"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:fontFamily="@font/pixellari"
                android:text="Buy!"
                android:textSize="24sp" />



        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>