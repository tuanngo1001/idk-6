<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/app_bar_nav" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="300sp">

        <LinearLayout
            android:layout_width="266dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/dayView"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixellari"
                android:text="Day"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="50sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/dayViewCounter"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixellari"
                android:text=" "
                android:textColor="@color/colorAccent"
                android:textSize="50sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="horizontal"
        android:paddingTop="375sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/periodView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixellari"
                android:text="Period"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="50sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_gravity="left">
            <TextView
                android:id="@+id/periodViewCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixellari"
                android:text="Afternoon"
                android:paddingStart="20sp"
                android:paddingEnd="0sp"
                android:textColor="@color/colorAccent"
                android:textSize="50sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:paddingTop="600sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/energyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixellari"
                android:padding="10sp"
                android:text="Energy"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="36sp" />

            <ProgressBar
                android:id="@+id/progressBarEnergy"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:max="100"
                android:padding="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/happinessText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixellari"
                android:padding="10sp"
                android:text="Happiness"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="36sp" />

            <ProgressBar
                android:id="@+id/progressBarHappiness"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:max="100"
                android:padding="10sp"
                android:progress="80" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/foodText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixellari"
                android:padding="10sp"
                android:text="Food"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="36sp" />

            <ProgressBar
                android:id="@+id/progressBarHunger"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:max="100"
                android:padding="10sp"
                android:progress="20" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>